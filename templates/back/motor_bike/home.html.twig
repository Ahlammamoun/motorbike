{% extends 'base.html.twig' %}


{% block title_nav %}<h1 class="text-center  ">Backoffice MotorBike</h1>{% endblock %}
{% block admin_nav %}
<ul class="nav mb-3 border border-dark">
    <li class="nav-item">   
        <a class="nav-link" href=" {{path ('app_back_motor_bike_index') }}">Motos</a>
    </li>
     <li class="nav-item">   
        <a class="nav-link" href=" {{path ('app_back_brand_index') }}">Marques</a>
    </li>

</ul>

{% endblock %}


{% block body %}
   

        {% for message in app.flashes('notice') %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endfor %}

<div class="d-flex flex-row">
    <button class=" bg-dark  w-50">
        <a href="{{ path('app_back_motor_bike_index') }}" class="text-danger">list</a>
    </button>
    <button class=" bg-dark  w-50">
        <a href="{{ path('app_back_brand_index') }}" class="text-danger">list</a>
    </button>
</div>

<div class="d-flex flex-row">
   
    <table class="table text-light w-50">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>ReleaseDate</th>
                <th>Color</th>
                <th>Picture</th>
            </tr>
        </thead>
        <tbody>
        {% for motor_bike in motor_bikes %}
            <tr>
                <td>{{ motor_bike.id }}</td>
                <td>{{ motor_bike.name }}</td>
                <td>{{ motor_bike.releaseDate ? motor_bike.releaseDate|date('Y-m-d') : '' }}</td>
                <td>{{ motor_bike.color }}</td>
              <td class="col-4 movie__poster w-25" style="background-image: url({{ motor_bike.picture }});" ></td>
              
                  
            </tr>
  
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
</div>





<div class="d-flex flex-row">
        <table class="table text-light w-50">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.name }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
</div>
  
{% endblock %}

