{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

 <button class=" bg-dark  w-100">    
    <a href="{{ path('app_back_user_index') }}" class="text-danger">back to general backoffice</a>
    </button>



    <table class="table text-light">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_user_edit', {'id': user.id}) }}" class="btn w-100 text-danger bg-dark">edit</a>

    {{ include('back/user/_delete_form.html.twig') }}
{% endblock %}
